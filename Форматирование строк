name = input("Ваше имя: ")
sn = input("Фамилия: ")
old = input("Возраст: ")
sposob_format = "Ваше имя: {}, Фамилия: {}, Возраст: {} лет".format(name, sn, old)
print("\nРеализация через format:")
print(sposob_format)
sposob_fstring = f"Ваше имя: {name}, Фамилия: {sn}, Возраст: {old} лет"
print("\nРеализация через f-string:")
print(sposob_fstring)
